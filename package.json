{
  "name": "cinema-viewer",
  "version": "0.0.1",
  "description": "Advanced cinema viewer",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --mode development --progress --colors",
    "serv": "cross-env NODE_ENV=development nodemon --exec babel-node -r node_modules/dotenv/config src/server.js",
    "clean": "rimraf build/ dist/ lib/",
    "lint": "standard --parser babel-eslint --fix \"src/**/*.js\"",
    "test": "yarn jest",
    "test:watch": "yarn test --watch",
    "cypress:open": "yarn cypress open",
    "check:src": "yarn run lint && yarn run test",
    "build:client-bundle": "webpack --mode production --progress --colors",
    "build": "yarn run clean && yarn run check:src && yarn run build:client-bundle"
  },
  "author": "Joe Smith <joesmith0488@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.2.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "lodash.chunk": "^4.2.0",
    "mongodb": "^3.1.13",
    "node-schedule": "^1.3.1",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^4.6.3",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^7.1.0",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.4",
    "redux-devtools-extension": "^2.13.7",
    "redux-observable": "^1.0.0",
    "rxjs": "^6.3.3",
    "shortid": "^2.2.14",
    "styled-components": "^4.1.3",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "7.0.0",
    "autoprefixer": "^9.4.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.12.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "jest": "^23.6.0",
    "jest-environment-enzyme": "^7.0.1",
    "jest-enzyme": "^7.0.1",
    "jest-styled-components": "^6.3.1",
    "nodemon": "^1.18.9",
    "normalize.css": "^8.0.1",
    "postcss-loader": "^3.0.0",
    "rupture": "^0.7.1",
    "standard": "^12.0.1",
    "standard-loader": "^6.0.1",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.28.3",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.2.0",
    "webpack-config-utils": "^2.3.1",
    "webpack-dev-server": "^3.1.14"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "standard": {
    "globals": [
      "describe",
      "test",
      "expect",
      "jest",
      "beforeEach"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "src/components/*",
      "src/store/*",
      "src/assets/*",
      "src/client.js"
    ]
  }
}
